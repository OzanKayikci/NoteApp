<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/filter_options"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RadioGroup
        android:id="@+id/bgFilters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"

        android:orientation="horizontal">

        <RadioButton

            android:id="@+id/rbTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Title "
            android:textColor="@drawable/radio_button_selector"
            android:textSize="18sp"
            app:buttonTint="@drawable/radio_button_selector" />

        <com.google.android.material.radiobutton.MaterialRadioButton
            android:id="@+id/rbDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:checked="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Date "
            android:textColor="@drawable/radio_button_selector"
            android:textSize="18sp"
            app:buttonTint="@drawable/radio_button_selector" />

        <RadioButton
            android:id="@+id/rbColor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Color "
            android:textColor="@drawable/radio_button_selector"
            android:textSize="18sp"
            app:buttonTint="@drawable/radio_button_selector" />
    </RadioGroup>

    <RadioGroup
        android:id="@+id/bgSort"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center"
        android:orientation="horizontal"
        android:textColor="@drawable/radio_button_selector"
        android:textSize="18sp"
        app:buttonTint="@drawable/radio_button_selector">

        <RadioButton
            android:id="@+id/rbAscending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:checked="true"
            android:fontFamily="@font/roboto_bold"
            android:text="Ascending "
            android:textColor="@drawable/radio_button_selector"
            android:textSize="18sp"
            app:buttonTint="@drawable/radio_button_selector" />

        <RadioButton
            android:id="@+id/rbDescending"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:fontFamily="@font/roboto_bold"
            android:text="Descending "
            android:textColor="@drawable/radio_button_selector"
            android:textSize="18sp"
            app:buttonTint="@drawable/radio_button_selector" />
    </RadioGroup>
</LinearLayout>